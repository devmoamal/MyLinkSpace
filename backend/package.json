{
  "name": "mylinkspace",
  "version": "0.0.1",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "db:generate": "bunx drizzle-kit generate --config libs/drizzle/drizzle.config.ts",
    "db:migrate": "bunx drizzle-kit migrate --config libs/drizzle/drizzle.config.ts",
    "db:studio": "bunx drizzle-kit studio --config libs/drizzle/drizzle.config.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "zod": "^4.2.1"
  }
}
